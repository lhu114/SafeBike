<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.safering.safebike.exercisereport.ExerciseReportFragment">
    <!-- TODO: Update blank fragment layout -->
    <android.support.v4.app.FragmentTabHost
        android:id="@+id/exercise_tabHost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0" />

            <FrameLayout
                android:id="@+id/exercise_realtabcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text_report_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    android:text="속력" />

                <TextView
                    android:id="@+id/text_report_calorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/text_report_speed"
                    android:text="칼로리" />

                <TextView
                    android:id="@+id/text_report_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/text_report_speed"
                    android:text="거리" />

                <TextView
                    android:id="@+id/text_value_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/text_report_speed"
                    android:layout_centerInParent="true"

                    android:text="속력값" />

                <TextView
                    android:id="@+id/text_value_calorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/text_value_speed"
                    android:layout_below="@id/text_report_calorie"

                    android:layout_centerInParent="true"

                    android:text="칼로리값" />

                <TextView
                    android:id="@+id/text_value_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/text_value_speed"
                    android:layout_below="@id/text_report_distance"

                    android:layout_centerInParent="true"

                    android:text="거리값" />



                >
            </RelativeLayout>
            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:background="@color/colorPrimary"
                android:text="칼로리 속력 속도" />
            -->
        </LinearLayout>
    </android.support.v4.app.FragmentTabHost>

</LinearLayout>
