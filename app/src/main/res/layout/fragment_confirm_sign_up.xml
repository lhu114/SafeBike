<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/register_bg"
    tools:context="com.safering.safebike.login.ConfirmSignUpFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/text_progress_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="209dp"
        android:gravity="center_horizontal"
        android:text="가입처리중입니다..."
        android:textColor="@color/colorWhite"

        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_complete_sign"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="209dp"
        android:text="축하합니다!"
        android:textColor="@color/colorWhite"

        android:textSize="20sp"

        android:visibility="gone" />

    <TextView
        android:id="@+id/text_complete_sign_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="252dp"
        android:text="가입이 완료되었습니다."
        android:textColor="@color/colorWhite"
        android:textSize="20sp"

        android:visibility="gone" />


    <Button
        android:id="@+id/btn_go_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="478dp"
        android:layout_marginLeft="24dp"
        android:background="@drawable/button_selector"
        android:text="@string/btn_go_main"
        android:textSize="16sp"
        android:textColor="@color/colorWhite" />


</RelativeLayout>
