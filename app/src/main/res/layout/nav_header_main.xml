<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"

    android:background="@drawable/menuitem_background_layer"


    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    >
<!--
    android:background="@color/colorNaviHeader"
-->


    <ImageView
        android:id="@+id/btn_account_setting"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="right"
        android:background="@mipmap/profile_setting" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView

            android:id="@+id/image_join_user"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:src="@mipmap/profile_img"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/text_user_imform_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:text="Android Studio"
            android:textColor="@color/colorUserImform"
            android:textSize="16sp"
            android:layout_toRightOf="@id/image_join_user"
            android:layout_centerVertical="true"


            />

        <TextView
            android:id="@+id/text_user_imform_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="yhms4432@naver.com"
            android:textColor="@color/colorUserImform"
            android:textSize="12sp"
            android:layout_below="@id/text_user_imform_id"
            android:layout_toRightOf="@id/image_join_user"
            />


    </RelativeLayout>


</LinearLayout>
