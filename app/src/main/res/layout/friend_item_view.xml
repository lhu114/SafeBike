<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">

    <!--<TextView
        android:id="@+id/text_friend_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:text="1"
        android:textSize="15sp"
        android:textColor="@color/colorBlack" />
    -->

    <ImageView
        android:id="@+id/image_friend"
        android:padding="3dp"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_marginLeft="30dp"
        android:src="@mipmap/profile_img" />

    <TextView
        android:id="@+id/text_friend_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@id/image_friend"
        android:text="friend"
        android:textSize="15sp"
        android:textColor="@color/colorBlack" />

    <TextView
        android:id="@+id/text_friend_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@id/image_friend"
        android:text="friend email"
        android:textSize="15sp"
        android:visibility="gone"

        android:textColor="@color/colorBlack" />

    <ImageView
        android:id="@+id/image_plus_friend"
        android:layout_centerVertical="true"
        android:layout_marginRight="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:background="@drawable/friend_plus_selector"

        android:visibility="invisible" />
</RelativeLayout>