<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/register_bg"
    android:orientation="vertical"

    tools:context="com.safering.safebike.login.SignUpFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/text_login_main_title"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@mipmap/rectangle"
            android:hint="@string/edit_user_name"
            android:lines="1"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:singleLine="true"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorRegister" />

        <EditText
            android:id="@+id/edit_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@mipmap/rectangle"
            android:hint="@string/edit_user_email"
            android:lines="1"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:singleLine="true"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorRegister" />

        <EditText
            android:id="@+id/edit_user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/rectangle"
            android:hint="@string/edit_user_password"
            android:lines="1"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:singleLine="true"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorRegister" />
        <!--
                <EditText
                    android:id="@+id/edit_user_password_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"


                    android:background="@drawable/edittext_selector"
                    android:lines="1"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    android:singleLine="true"
                    android:hint="@string/edit_user_password_confirm" />-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"

                >

                <CheckBox
                    android:id="@+id/check_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:button="@drawable/checkbox_selector"
                    />

                <TextView
                    android:id="@+id/text_temp_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="본인은 SafeBike의 "

                    />
                <TextView
                    android:id="@+id/text_user_mannger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"

                    android:text="@string/text_user_manner" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 및 " />
                <TextView
                    android:id="@+id/text_private_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_private_policy"
                    android:textColor="@color/colorWhite"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="에" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_temp_line"
                    android:text=" 동의합니다."
                    android:layout_gravity="center_horizontal"

                    />



            </LinearLayout>






        </RelativeLayout>
<!--
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_temp_line"
            android:text="동의합니다."
            android:layout_gravity="center_horizontal" />
        -->

        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/text_signup_fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_fail_message"
            android:textColor="@color/colorWhite"

            android:visibility="gone" />

        <TextView
            android:layout_gravity="center_horizontal"

            android:id="@+id/text_duple_fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_duple_message"
            android:textColor="@color/colorWhite"

            android:visibility="gone" />
        <TextView
            android:layout_gravity="center_horizontal"

            android:id="@+id/text_policy_fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup_policy_message"
            android:textColor="@color/colorWhite"

            android:visibility="gone" />

        <!--
                <TextView
                    android:id="@+id/text_confirm_fail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/signup_duple_message"
                    android:visibility="gone" />
                -->

        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/btn_go_next"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_selector"
            android:text="@string/btn_go_next" />


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:orientation="vertical">
