<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="59dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_recent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/safebike_logo_s" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_rct_poi_name"
        android:textSize="16sp"
        android:textColor="#000000"
        android:id="@+id/text_rct_poi_name"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="76dp"
        android:maxLength="10"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxWidth="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_rct_search_date"
        android:textSize="12sp"
        android:textColor="#9a9a9a"
        android:id="@+id/text_rct_search_date"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="21dp"
        android:layout_marginRight="24dp"
        android:layout_alignParentEnd="true" />
</RelativeLayout>