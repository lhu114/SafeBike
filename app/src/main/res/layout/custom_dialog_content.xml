<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorNaviHeader"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorNaviHeader"
        >
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/image_custom_safelogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"

            android:src="@mipmap/safebike"
            />
        <TextView
            android:id="@+id/text_custom_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_custom_safelogo"
            android:layout_alignBottom="@id/image_custom_safelogo"
            android:textColor="@color/colorTabText"
            android:text="로그인"
            android:textSize="16sp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_underline_layer"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />

    </RelativeLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorNaviHeader"
        >

        <TextView
            android:layout_margin="20dp"


            android:id="@+id/text_custom_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="로그인 실패"
            android:textColor="@color/colorTabText"
            android:gravity="center_horizontal|center_vertical"
            />
    </LinearLayout>
    <!--<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_underline_layer_gray"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />

    </RelativeLayout>
-->
        <Button
            style="?android:attr/actionButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YES"
            android:textColor="@color/colorTabText"
            android:id="@+id/btn_custom_dialog_positive"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/dialog_underline_layer_gray"

            />




</LinearLayout>