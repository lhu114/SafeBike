<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorUserImform"

    >
    <ImageView
        android:id="@+id/image_backkey_friend_directOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_selector"
        android:layout_centerVertical="true"


        />

    <EditText
        android:id="@+id/edit_friend_search_directOff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="34dp"

        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="16sp"
        android:inputType="textAutoCorrect"

        android:background="@drawable/search_box"
        android:textColor="@color/colorBlack"
        android:singleLine="true"
        android:lines="1"
        android:hint="검색"

        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/image_search_friend_directOff" />
    <ImageView
        android:id="@+id/image_search_friend_directOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        android:background="@drawable/search_selector"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        />
    <ImageView
        android:id="@+id/image_cancel_friend_directOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"

        android:background="@drawable/button_cancel_selector"
        />


</RelativeLayout>

