<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.safering.safebike.account.AccountHelpActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/image_safebike_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/text_safebike_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/image_safebike_logo"
            android:layout_below="@id/image_safebike_logo"
            android:layout_toRightOf="@id/image_safebike_logo"
            android:text="SafeBike" />

        <TextView
            android:id="@+id/text_safebike_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/text_safebike_title"
            android:layout_below="@id/text_safebike_title"
            android:text="copyright 2015 SAFE BIKE" />

        <TextView
            android:id="@+id/text_safebike_right"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/text_safebike_copyright"
            android:layout_below="@id/text_safebike_copyright"
            android:text="ALL RIGHT RESERVED" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_show_use"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_show_use"
            />

        <Button
            android:id="@+id/btn_qna_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_qna_email"
            />

        <Button
            android:id="@+id/btn_policy_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_policy_profile"
            />

        <Button
            android:id="@+id/btn_license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_license"
            />
    </LinearLayout>

</LinearLayout>
