<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/register_bg"
    tools:context="com.safering.safebike.login.LoginFragment">


        <TextView
            android:id="@+id/text_login_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/safebike_small_withe"
            android:layout_marginLeft="151dp"
            android:layout_marginTop="40dp"
            android:text="@string/text_login_main"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@mipmap/safebike_small_withe"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="33dp"
            android:layout_gravity="center_horizontal" />

    <!-- TODO: Update blank fragment layout -->


        <ImageView
            android:id="@+id/image_logo_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo_start"
            android:layout_marginLeft="102dp"
            android:layout_marginTop="142dp"
            />
        <TextView
            android:id="@+id/text_login_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/safebike_small_withe"
            android:layout_marginTop="326dp"
            android:layout_marginLeft="94dp"
            android:text="@string/text_login_warning"
            android:textSize="20sp"
            
            android:textColor="@color/colorWhite"


            />



        <Button

            android:id="@+id/btn_login_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_login_sign"
            android:background="@drawable/button_selector"
            android:textColorHint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="474dp"
            android:textSize="16sp"
            />

        <Button

            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_login"
            android:textSize="16sp"
            android:background="@drawable/button_selector"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="531dp"
            />


</RelativeLayout>
